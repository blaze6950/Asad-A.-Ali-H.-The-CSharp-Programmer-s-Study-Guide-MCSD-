<Window x:Class="MakingUIResponsive.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MakingUIResponsive"
        mc:Ignorable="d"
        Title="Making UI Responsive" Height="450" Width="800">
    <Grid>
        <Grid Margin="100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Button Grid.Column="1" Grid.Row="1" Margin="10" Click="ButtonBase_OnClick">Button</Button>
            <Label Name="Label" Grid.Row="0" Grid.Column="1" Margin="10" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">Label</Label>
        </Grid>
    </Grid>
</Window>
